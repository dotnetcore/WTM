@model WalkingTec.Mvvm.Demo.ViewModels.LinkTestVMs.LinkTestVM
@inject IStringLocalizer<Program> Localizer;

<wt:form vm="@Model">
  <wt:row items-per-row="ItemsPerRowEnum.Two">
    <wt:textbox field="Entity.name" />
    <wt:selector list-vm="listVM" field="SelectedSchool" text-bind="listVM.EntityList[-1].SchoolName" link-field="SelectedMajor" trigger-url="/LinkTest/GetMajorBySchool">
    </wt:selector>
    <wt:combobox field="SelectedMajor" link-field="Entity.StudentId" trigger-url="/LinkTest/GetStudentByMajor"/>
    <wt:radio field="Entity.StudentId"  />
  </wt:row>
    <wt:row align="AlignEnum.Right">
        <wt:submitbutton />
        <wt:closebutton />
    </wt:row>
</wt:form>
