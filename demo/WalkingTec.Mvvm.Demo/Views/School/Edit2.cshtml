@model WalkingTec.Mvvm.Demo.ViewModels.SchoolVMs.SchoolVM

<wt:form vm="@Model">
    <wt:row items-per-row="ItemsPerRowEnum.Two">
        <wt:textbox field="Entity.SchoolCode" />
        <wt:textbox field="Entity.SchoolName" />
        <wt:combobox field="Entity.SchoolType" />
        <wt:textbox field="Entity.Remark" />
    </wt:row>
    <wt:grid vm="MajorList" use-local-data="true" hidden-panel="true" hidden-checkbox="true" height="-400"/>
    <wt:hidden field="Entity.ID" />
    <wt:row align="AlignEnum.Right">
        <wt:submitbutton />
        <wt:closebutton />
    </wt:row>
</wt:form>